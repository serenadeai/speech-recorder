{
  "name": "speech-recorder",
  "version": "2.0.0",
  "description": "A library for audio and speech streaming using the microphone.",
  "main": "src/index.js",
  "repository": "https://github.com/serenadeai/speech-recorder-native",
  "author": "Serenade",
  "license": "MIT",
  "gypfile": true,
  "binary": {
    "napi_versions": [6]
  },
  "scripts": {
    "build": "node build.js",
    "clean": "rm -rf build prebuilds lib/build",
    "install": "prebuild-install -r napi || node-gyp rebuild",
    "package": "prebuild -r napi --include-regex '.(node|a|dylib|dll|so)$'",
    "package:linux": "yarn package --arch=ia32",
    "package:mac": "yarn package --arch=x64",
    "package:windows": "yarn package --arch=ia32",
    "package:upload": "yarn package --upload ${GITHUB_TOKEN}"
  },
  "dependencies": {
    "bindings": "^1.5.0",
    "node-addon-api": "^4.2.0",
    "prebuild-install": "^7.0.0"
  },
  "devDependencies": {
    "prebuild": "^11.0.0",
    "wavefile": "^11.0.0"
  }
}
